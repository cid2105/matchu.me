                <li style="padding:15px;">
                  
                  <%= render "shared/match_alert" %>
                  
                  <li class="divider"></li>
                  <ul>
                      <% current_user.matches.first(current_user.new_match_count).each do |m| %>
                       <li> <%= User.find(m.match_id) %> </li>
                      <% end %>
                  </ul>
                    
