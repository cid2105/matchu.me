            <% end %>
            
         <div class="btn-group pull-right" id="alerts">

            <a href="#" data-toggle="dropdown" class="btn dropdown-toggle" >
              
              <i class="icon-user"></i> <%= current_user.to_s.split.first %> &nbsp;
              <% if current_user.new_match_count > 0 %>
                <span class="badge badge-important" style="background-color:#B94A48;"><%= current_user.new_match_count %></span> 
              <% end %>

              <span class="caret"></span>
